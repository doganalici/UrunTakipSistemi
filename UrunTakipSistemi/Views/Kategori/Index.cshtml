@using UrunTakipSistemi.Models.Entity
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="text-align:center;font-size:55px;font-family:'Times New Roman';">KATEGORİLER</h3>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KATEGORİ ADI</th>
        @*<th>SİL</th>
            <th>GÜNCELLE</th>*@
        <th>İŞLEMLER</th>
    </tr>

    @foreach (var ktgr in Model)
    {
        <tr>
            <td>@ktgr.Id</td>
            <td>@ktgr.Ad</td>
            <td>
                <a href="/Kategori/KategoriSil/@ktgr.Id" class="btn btn-danger" style="margin-right:10px;">Sil</a>
                <a href="/Kategori/KategoriGetir/@ktgr.Id" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Kategori/YeniKategori" class="btn btn-primary">Yeni Kategori</a>